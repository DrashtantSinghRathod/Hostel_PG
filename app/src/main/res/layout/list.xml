<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myrecycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:clickable="false"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        app:cardBackgroundColor="@color/cream"
        app:cardCornerRadius="4dp"
        app:contentPadding="1dp"
        app:contentPaddingTop="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:descendantFocusability="blocksDescendants"
            android:focusable="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            app:cardBackgroundColor="@color/cream"
            app:cardCornerRadius="4dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="2dp"
                    android:background="#FFFFFF"
                    android:clickable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center|right"
                            android:paddingRight="10dp"
                            android:textColor="#061FFD"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/ic_place_black_24dp" />

                            <TextView
                                android:id="@+id/textView27"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:clickable="false"
                                android:focusable="false"
                                android:gravity="center|left"
                                android:paddingLeft="10dp"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:focusable="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lh"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lhs"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="left|center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView23"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:layout_weight="1"
                                        android:clickable="false"
                                        android:focusable="false"
                                        android:gravity="center_horizontal"
                                        android:paddingLeft="5dp"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textView39"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:clickable="false"
                                        android:focusable="false"
                                        android:gravity="center_horizontal"
                                        android:text="Single Room"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lhd"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView125"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textView126"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="Double Room"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lht"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="right|center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/textView127"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textView128"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:text="Tripple Room"
                                        android:textSize="18sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lp1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/textView129"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:text="One person -"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textView130"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lp2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/textView131"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:text="Two persons -"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textView132"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:textSize="18sp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lf"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lf1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/textView133"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:text="1 BHK Rent - "
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textView134"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left|center_vertical"
                                        android:paddingLeft="10dp"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lf2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/textView135"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:text="2 BHK Rent - "
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textView136"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left|center_vertical"
                                        android:paddingLeft="10dp"
                                        android:textSize="18sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lf3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingLeft="10dp">

                                    <TextView
                                        android:id="@+id/textView137"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:text="3 BHK Rent - "
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/textView138"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left|center_vertical"
                                        android:paddingLeft="10dp"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="false"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="false"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:clickable="false"
                        android:descendantFocusability="blocksDescendants"
                        android:focusable="false"
                        android:paddingRight="10dp"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:scrollbarFadeDuration="0">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="false"
                            android:focusable="false"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/ac2" />

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/laundry" />

                            <ImageView
                                android:id="@+id/imageView19"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/electricity" />

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/kitchen" />

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/ro" />

                            <ImageView
                                android:id="@+id/imageView16"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/bed" />

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/matress" />

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/sweeper" />

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/cooler" />

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:focusable="false"
                                app:srcCompat="@drawable/water_heater" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/cream"
                        android:orientation="horizontal"
                        android:padding="1dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp">

                        <ImageView
                            android:id="@+id/imageView20"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="false"
                            app:srcCompat="@drawable/saved" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>